<h1>Edit</h1>

{{#each errors}}
    <div class="alert alert-danger">{{errorMsg}}</div>
{{else}}

{{/each}}
<div class="card card-body">
    <h3>Edit Post Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" value={{idea.title}} class="form-control" required>
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea type="text" name="details" class="form-control" required>{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>